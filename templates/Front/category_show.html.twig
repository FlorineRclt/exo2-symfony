{% extends 'Front/base.html.twig' %}

{% block metaTitle %}{{ category.title }}{% endblock metaTitle %}

{% block main %}
    <div id="page-cat">
        <h2>{{ category.title }}</h2>
        <p>{{ category.description }}</p>
        {% for article in category.articles %}
            <div class="article">
                <h3><a href="{{ path('articleShow', {'id': article.id}) }}">{{ article.title }}</a></h3>
                <p>{{ article.content }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock main %}