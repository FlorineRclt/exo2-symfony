<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block metaTitle %}{% endblock metaTitle %}</title>

    <link rel="stylesheet" href="{{ asset('style_base.css') }}">
</head>



<body>

<header class="header">
    <nav>
        <div id="logo">
            <a href="{{ path ('home') }}"><img src="{{ asset('img/construction.png') }}" alt="" class="resp"></a>
        </div>
        <form action="{{ path('search') }}" method="get"></form>
        <input type="text" name="q" placeholder="Rechercher...">
        <input type="submit" value="Rechercher">
        <div id="menu">
            <a href="{{ path ('categoryList') }}"><img src="{{ asset('img/menu.png') }}" alt="" class="resp"></a>
        </div>
    </nav>
</header>



<main class="main">
{% block main %}{% endblock main %}
</main>



<footer class="footer">

</footer>



</body>
</html>
