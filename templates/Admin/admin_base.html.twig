<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block metaTitle %}{% endblock metaTitle %}</title>

    <link rel="stylesheet" href="{{ asset('style_base.css') }}">
</head>



<body>

<header>
    <nav class="header">
        <div id="logo">
            <a href="{{ path ('adminHome') }}"><img src="{{ asset('img/construction.png') }}" alt="" class="resp"></a>
        </div>
        <form action="{{ path('adminSearch') }}" method="get">
            <input type="text" name="q" placeholder="Rechercher...">
            <input type="submit" value="Rechercher">
        </form>
        <a class="lien-text" href="{{ path('adminArticleList') }}">Gestion des articles</a>
        <a class="lien-text" href="{{ path('adminCategoryList') }}">Gestion des catégories</a>
        <a class="lien-text" href="{{ path('adminTagList') }}">Gestion des tags</a>
        <a class="lien-text" href="{{ path('app_logout') }}">Se déconnecter</a>
        <div id="menu">
            <a href="{{ path ('adminCategoryList') }}"><img src="{{ asset('img/menu.png') }}" alt="" class="resp"></a>
        </div>
    </nav>

    {#        Créer un message flash pour annoncer le succès ou les erreurs du crud#}
    <div>
        {% for message in app.flashes('success') %}
            <div class="flash-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>


</header>


{# à mettre plutot dans le block main sur chaque twig pour plus de facilités de modifications #}
<main class="main">
{% block main %}{% endblock main %}
</main>



<footer class="footer">

</footer>



</body>
</html>